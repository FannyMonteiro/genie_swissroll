# CONFIGURATION TEMPLATE (EMBM + GOLDSTEIN + GOLDSTEIN SEA-ICE + ATCHEM + BIOGEM + OCNLITE)


# *******************************************************************
# COMPILER OPTIONS
# *******************************************************************
# Set floating point precision
GENIEDP=TRUE
IGCMATMOSDP=TRUE
# Set build options (un-comment to compile and run with more comprehsneive de-bugging)
#BUILD=DEBUG


# *******************************************************************
# GENIE COMPONENT SELECTION
# *******************************************************************
#
ma_flag_ebatmos=.TRUE.
ma_flag_goldsteinocean=.TRUE.
ma_flag_goldsteinseaice=.TRUE.
ma_flag_biogem=.TRUE.
ma_flag_atchem=.TRUE.
ma_flag_goldlite=.TRUE.


# *******************************************************************
# GRID CONFIGURATION
# *******************************************************************
# Atmosphere grid
GENIENXOPTS='$(DEFINE)GENIENX=18'
GENIENYOPTS='$(DEFINE)GENIENY=18'
GENIENLOPTS='$(DEFINE)GENIENL=1'
# Ocean grid
GOLDSTEINNLONSOPTS='$(DEFINE)GOLDSTEINNLONS=18'
GOLDSTEINNLATSOPTS='$(DEFINE)GOLDSTEINNLATS=18'
GOLDSTEINNLEVSOPTS='$(DEFINE)GOLDSTEINNLEVS=8'
# Specify the observational data and topography: EMBM
ea_topo='p0000b'
ea_taux_u="p0000b_taux_u.interp"
ea_tauy_u="p0000b_tauy_u.interp"
ea_taux_v="p0000b_taux_v.interp"
ea_tauy_v="p0000b_tauy_v.interp"
ea_adv_u="p0000b_uncep.silo"
ea_adv_v="p0000b_vncep.silo"
# Specify the observational data and topography: GOLDSTEIN
go_topo='p0000b'
# Specify the observational data and topography: GOLDSTEIN sea-ice
gs_topo='p0000b'
#assumed longitudinal offset of the grid
gm_par_grid_lon_offset=-260.0


# *******************************************************************
# TRACER CONFIGURATION
# *******************************************************************
#
# Set number of tracers
GOLDSTEINNTRACSOPTS='$(DEFINE)GOLDSTEINNTRACS=8'
# Set selected tracers
gm_ocn_select_57=.true.
gm_ocn_select_58=.true.
gm_ocn_select_59=.true.
gm_ocn_select_60=.true.
gm_ocn_select_61=.true.
gm_ocn_select_62=.true.
# Set tracer initial values
bg_ocn_init_57=0.0
bg_ocn_init_58=0.0
bg_ocn_init_59=0.0
bg_ocn_init_60=0.0
bg_ocn_init_61=0.0
bg_ocn_init_62=0.0


# *******************************************************************
# OUTPUT CONFIGURATION
# *******************************************************************
#
# Set experiment ID
# NOTE: the full (directory) name of the experiment consists of this ID followed by '.' and run ID (set at the command line)
EXPID='cgenie_ocnlite_18x18x8'
# this is to only write ocean-grid data in genie-main
ma_write_flag_atm=.false.
ma_write_flag_sic=.false.
# this is to turn graphics off
ma_lgraphics=.false.
# turn off CALL to diagend
go_ctrl_diagend=.false.


# *******************************************************************
# TIME CONTROL AND TIME-STEPPING
# *******************************************************************
# NOTE: For igcm where dt is usually 1 hour, use koverall_total=8640 for a 1 year run.
#       For c-goldstein, where dt is usually 365.25/500 days, use koverall_total=500 for a 1 year run.
# NOTE: 720=1 month of igcm (timestep=1 hour) to 2500000=5000 years of c-goldstein
#       BIOGEM run length = ma_koverall_total/500
#
# 1. TIME_STEP DURATION
# c-goldstein; ma_genie_timestep = 365.25*24.0/(5*48) * 3600.0 (GOLDSTEIN year length)
ma_genie_timestep=131490
#
# 2. RELATIVE EMBM/GOLDSTEIN/SEA-ICE CALLING FREQUENCY
ma_ksic_loop=5
ma_kocn_loop=5
# 3. set time-stepping gearing
ma_conv_kocn_katchem=1
ma_conv_kocn_kbiogem=1
ma_conv_kocn_kgoldlite=1


# *******************************************************************
# PHYSICAL CLIMATE CONFIGURATION #1: main goin parameters
# *******************************************************************
# this is to set the climate model goin parameters as per Ridgwell et al. [2007a] (I hope ...)
# temp0
go_10=0.0
# temp1
go_11=0.0
# rel
go_12=0.9000000
# scl_tau
go_13=1.931692
# ocean diffusivites iso (or horiz)
go_14=4488.812
# ocean diffusivites dia (or vert)
go_15=2.7242320E-05
# inverse minimum drag in days
go_16=2.939598
# scl_tau (should be same as GOLDSTEIN's value)
ea_11=1.931692
# atm. diff. amp. for T
ea_12=4667550.0
# atm. diff. amp. for q
ea_13=1097107.0
# dist'n width
ea_14=1.083292
# dist'n slope
ea_15=6.3252553E-02
# atm. advection factor for T_z
ea_16=0.1121861
# atm. advection factor for T_m
ea_17=0.0000000E+00
# atm. advection factor for q_z
ea_18=0.2269510
# atm. advection factor for q_m
ea_19=0.2269510
# extra1a
ea_25=-2.1228021E-02  
# extra1b
ea_26=0.1202921      
# extra1c
ea_27=0.1273681
# sea-ice eddy diffusivity
gs_11=6200.000


# *******************************************************************
# CLIMATE ADJUSTMENT
# *******************************************************************
#
# set no seasonal cycle
ea_dosc=.false.
go_dosc=.false.
gs_dosc=.false.


